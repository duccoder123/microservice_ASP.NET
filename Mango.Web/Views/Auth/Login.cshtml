@model LoginRequestDto
<form method="POST">
    <div class="container shadow border p-4">
        <div class="row text-center">
            <h1>Login</h1>
        </div>
        <div class="row text-center">
            <div asp-validation-summary="All" class="text-danger"></div>
        </div>
        <div class="row">
            <div class="col-12 col-md-6 offset-3 pb-3">
                <input type="text" asp-for="UserName" class="form-control rounded-3" placeholder="User Name"/>
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
            <div class="col-12 col-md-6 offset-3 pb-3">
                <input type="password" asp-for="Password" class="form-control rounded-3" placeholder="Password"/>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="col-12 col-md-6 offset-3 pb-2">
                <button type="submit" class="btn btn-success  form-control rounded-3" value="Submit">Login</button> 
            </div>
        </div>

    </div>
</form>