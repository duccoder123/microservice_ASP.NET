@model RegistrationRequestDto
<form method="POST">
    <div class="container shadow border p-4">
        <div class="row text-center">
            <h1>Register</h1>
        </div>
        <div class="row text-center">
            <div asp-validation-summary="All" class="text-danger"></div>
        </div>
        <div class="row">
            <div class="col-12 col-md-6 offset-3 pb-3">
                <input type="text" asp-for="Email" class="form-control rounded-3" placeholder="Email" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="col-12 col-md-6 offset-3 pb-3">
                <input type="text" asp-for="Name" class="form-control rounded-3" placeholder="Name" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="col-12 col-md-6 offset-3 pb-3">
                <input type="text" asp-for="PhoneNumber" class="form-control rounded-3" placeholder="Phone Number" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
            <div class="col-12 col-md-6 offset-3 pb-3">
                <input type="password" asp-for="Password" class="form-control rounded-3" placeholder="Password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="col-12 col-md-6 offset-3 pb-3">
                <select asp-for="Role" class="form-select rounded-3" asp-items="@ViewBag.RoleList">
                    <option disabled selected>--Select Role--</option>
                </select>
            </div>
            <div class="col-12 col-md-6 offset-3 pb-2">
                <button type="submit" class="btn btn-info  form-control rounded-3" value="Submit">Register</button>
            </div>
        </div>

    </div>
</form>