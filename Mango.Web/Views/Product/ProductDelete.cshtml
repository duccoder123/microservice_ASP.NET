@model ProductDto
<form asp-action="ProductDelete">
    <br />
    <div class="container border p-3">
        <h1 class="text-dark text-center">Delete Product</h1>
        <input asp-for="ProductId" hidden />
        <hr />
        <div class="row">
            <div class="col-2">
                <label class="control-label pt-2" style="font-size:18px">Name </label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Name" disabled class="form-control" />
            </div>
            <div class="col-2">
                <label class="control-label pt-2" style="font-size:18px">Category Name</label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="CategoryName" disabled class="form-control" />
            </div>
            <div class="col-2">
                <label class="control-label pt-2" style="font-size:18px">Description</label>
            </div>
            <div class="col-10 pb-3">
                <textarea class="form-control" disabled rows="5" asp-for="Description"></textarea>

            </div>
            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px;">ImageUrl</label>
            </div>
            <div class="col-10 pb-3">
                <input class="form-control" disabled asp-for="ImageUrl" />
            </div>
            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px;">Price</label>
            </div>
            <div class="col-10 pb-3">
                <input class="form-control" disabled asp-for="Price" />
            </div>
            <div class="col-5 offset-2">
                <a asp-action="ProductIndex" class="btn-primary btn form-control rounded-2">Back to List</a>
            </div>
            <div class="col-5">
                <input type="submit" value="Delete" class="btn btn-danger form-control rounded-2" />
            </div>
        </div>
    </div>
</form>

